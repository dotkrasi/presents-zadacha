@model List<Presents.Data.Entities.Category>
<h2 class="text-center">Categories</h2>
<div class="mb-3">
    <a asp-action="Create" asp-controller="Category" class="btn btn-primary">Add Category</a>
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Back</a>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr class="table-danger">
            <th>ID</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@item.ID" asp-controller="Category" method="post" style="display:inline">
                        <button class="btn btn-warning btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>