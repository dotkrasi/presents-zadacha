@model List<Presents.Data.Entities.Gift>
<h2 class="text-center">Gifts</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr class="table-danger">
            <th>Name</th>
            <th>Description</th>
            <th>Image URL</th>
            <th>Category</th>
            <th>Taken</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Decription</td>
                <td><img src="@item.ImageURL" width="400" height="250" /></td>
                <td>@item.Category.Name</td>
                <td>@item.IsTaken</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@item.ID" asp-controller="Gift" method="post" style="display:inline">
                        <button class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>